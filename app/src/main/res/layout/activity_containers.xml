<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContainersActivity">

    <!-- Main content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Containers"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Container 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="#F47236"
                    app:cardBackgroundColor="@color/colorWhite">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Container 1"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:paddingBottom="8dp" />

                        <EditText
                            android:id="@+id/container_name_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Product Name"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/container_weight_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Weight: 0g"
                            android:textSize="16sp"
                            android:paddingTop="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Container 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="#077FD6"
                    app:cardBackgroundColor="@color/colorWhite">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Container 2"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:paddingBottom="8dp" />

                        <EditText
                            android:id="@+id/container_name_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Product Name"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/container_weight_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Weight: 0g"
                            android:textSize="16sp"
                            android:paddingTop="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Container 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="#19CC27"
                    app:cardBackgroundColor="@color/colorWhite">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Container 3"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:paddingBottom="8dp" />

                        <EditText
                            android:id="@+id/container_name_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Product Name"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/container_weight_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Weight: 0g"
                            android:textSize="16sp"
                            android:paddingTop="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Container 4 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="#FFEB3B"
                    app:cardBackgroundColor="@color/colorWhite">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Container 4"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:paddingBottom="8dp" />

                        <EditText
                            android:id="@+id/container_name_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Product Name"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/container_weight_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Weight: 0g"
                            android:textSize="16sp"
                            android:paddingTop="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Container 5 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="#DB69EC"
                    app:cardBackgroundColor="@color/colorWhite">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Container 5"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:paddingBottom="8dp" />

                        <EditText
                            android:id="@+id/container_name_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Product Name"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/container_weight_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Weight: 0g"
                            android:textSize="16sp"
                            android:paddingTop="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Container 6 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="#EF5D73"
                    app:cardBackgroundColor="@color/colorWhite">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Container 6"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:paddingBottom="8dp" />

                        <EditText
                            android:id="@+id/container_name_6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Product Name"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/container_weight_6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Weight: 0g"
                            android:textSize="16sp"
                            android:paddingTop="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <!-- Navigation drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>
